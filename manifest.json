{
  "manifest_version": 3,
  "name": "Element Blur",
  "version": "1.1",
  "description": "Blur or highlight any element, region, or text on a web page with customizable colors and intensity.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
  "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["toolbar.html", "toolbar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
